<body class="bg-gray-100">
  <div class="container mx-auto px-4 py-8 max-w-4xl">
    <div class="bg-white rounded-lg shadow-md overflow-hidden">
      <!-- Header -->
      <div class="bg-[#E6D88B] p-6 text-center">
        <h1 class="text-2xl font-bold text-gray-800">منشئ روابط الدروس للمعلمين</h1>
        <p class="text-gray-700 mt-2">أدخل بيانات الدرس لإنشاء كود HTML جاهز للإدراج</p>
      </div>
      
      <!-- Form -->
      <div class="p-6">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <!-- Teacher Name -->
          <div class="form-section">
            <label class="block text-gray-700 font-medium mb-2">اسم المعلم</label>
            <input type="text" id="teacherName" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#E6D88B]" placeholder="أدخل اسم المعلم">
          </div>
          
          <!-- Educational Level -->
          <div class="form-section">
            <label class="block text-gray-700 font-medium mb-2">المرحلة التعليمية</label>
            <select id="educationLevel" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#E6D88B]">
              <option value="متوسط">متوسط</option>
              <option value="ثانوي">ثانوي</option>
            </select>
          </div>
          
          <!-- Subject -->
          <div class="form-section">
            <label class="block text-gray-700 font-medium mb-2">المادة</label>
            <select id="subject" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#E6D88B]">
              <option value="الرياضيات">الرياضيات</option>
              <option value="اللغة العربية">اللغة العربية</option>
              <option value="العلوم الفيزيائية">العلوم الفيزيائية</option>
              <option value="علوم الطبيعية والحياة">علوم الطبيعية والحياة</option>
              <option value="التاريخ والجغرافيا">التاريخ والجغرافيا</option>
              <option value="اللغة الفرنسية">اللغة الفرنسية</option>
              <option value="اللغة الإنجليزية">اللغة الإنجليزية</option>
            </select>
          </div>
          
          <!-- Year -->
          <div class="form-section">
            <label class="block text-gray-700 font-medium mb-2">السنة الدراسية</label>
            <select id="year" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#E6D88B]">
              <option value="الأولى">الأولى</option>
              <option value="الثانية">الثانية</option>
              <option value="الثالثة">الثالثة</option>
              <option value="الرابعة">الرابعة</option>
            </select>
          </div>
          
          <!-- Post Title -->
          <div class="form-section md:col-span-2">
            <label class="block text-gray-700 font-medium mb-2">عنوان المنشور</label>
            <input type="text" id="postTitle" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#E6D88B]" placeholder="أدخل عنوان المنشور">
          </div>
          
          <!-- Post Link -->
          <div class="form-section md:col-span-2">
            <label class="block text-gray-700 font-medium mb-2">رابط المنشور</label>
            <input type="url" id="postLink" class="w-full px-4 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-[#E6D88B]" placeholder="أدخل رابط المنشور">
          </div>
          
          <!-- Content Type -->
          <div class="form-section md:col-span-2">
            <label class="block text-gray-700 font-medium mb-2">نوع المحتوى</label>
            <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
              <label class="inline-flex items-center">
                <input type="radio" name="contentType" value="ملخص" class="form-radio text-[#E6D88B] focus:ring-[#E6D88B]" checked>
                <span class="mr-2">ملخص</span>
              </label>
              <label class="inline-flex items-center">
                <input type="radio" name="contentType" value="سلسلة" class="form-radio text-[#E6D88B] focus:ring-[#E6D88B]">
                <span class="mr-2">سلسلة</span>
              </label>
              <label class="inline-flex items-center">
                <input type="radio" name="contentType" value="فيديو" class="form-radio text-[#E6D88B] focus:ring-[#E6D88B]">
                <span class="mr-2">فيديو</span>
              </label>
              <label class="inline-flex items-center">
                <input type="radio" name="contentType" value="تمرين" class="form-radio text-[#E6D88B] focus:ring-[#E6D88B]">
                <span class="mr-2">تمرين</span>
              </label>
            </div>
          </div>
        </div>
        
        <!-- Generate Button -->
        <div class="mt-8 text-center">
          <button onclick="generateCode()" class="bg-[#E6D88B] hover:bg-[#d4c77d] text-gray-800 font-bold py-3 px-6 rounded-md transition duration-300">
            <i class="fas fa-code mr-2"></i>إنشاء الكود
          </button>
        </div>
      </div>
      
      <!-- Code Output -->
      <div class="p-6 border-t border-gray-200">
        <div class="flex border-b border-gray-200">
          <button class="tab-btn py-2 px-4 font-medium text-[#E6D88B] border-b-2 border-[#E6D88B]" data-tab="htmlTab">كود HTML</button>
        </div>
        
        <!-- HTML Code Tab -->
        <div id="htmlTab" class="tab-content active mt-4">
          <h2 class="text-xl font-bold text-gray-800 mb-4">الكود الناتج</h2>
          <div class="bg-gray-800 text-gray-100 p-4 rounded-md code-output">
            <pre id="htmlCode" class="overflow-x-auto"><span class="text-gray-400">سيظهر كود HTML هنا بعد تعبئة النموذج</span></pre>
          </div>
        </div>
        
        <div class="mt-4 flex justify-between">
          <button onclick="copyCode()" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-md transition duration-300">
            <i class="fas fa-copy mr-2"></i>نسخ الكود
          </button>
          <button onclick="resetForm()" class="bg-gray-200 hover:bg-gray-300 text-gray-800 font-medium py-2 px-4 rounded-md transition duration-300">
            <i class="fas fa-redo mr-2"></i>إعادة تعيين
          </button>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Tab functionality
    document.querySelectorAll('.tab-btn').forEach(btn => {
      btn.addEventListener('click', function() {
        // Remove active class from all buttons and tabs
        document.querySelectorAll('.tab-btn').forEach(b => {
          b.classList.remove('text-[#E6D88B]', 'border-b-2', 'border-[#E6D88B]');
          b.classList.add('text-gray-500');
        });
        document.querySelectorAll('.tab-content').forEach(tab => {
          tab.classList.remove('active');
        });
        
        // Add active class to clicked button and corresponding tab
        this.classList.add('text-[#E6D88B]', 'border-b-2', 'border-[#E6D88B]');
        this.classList.remove('text-gray-500');
        const tabId = this.getAttribute('data-tab');
        document.getElementById(tabId).classList.add('active');
      });
    });

    function generateCode() {
      // Get form values
      const teacherName = document.getElementById('teacherName').value;
      const educationLevel = document.getElementById('educationLevel').value;
      const subject = document.getElementById('subject').value;
      const year = document.getElementById('year').value;
      const postTitle = document.getElementById('postTitle').value;
      const postLink = document.getElementById('postLink').value;
      const contentType = document.querySelector('input[name="contentType"]:checked').value;
      
      // Validate required fields
      if (!teacherName || !postTitle || !postLink) {
        alert('الرجاء تعبئة جميع الحقول المطلوبة');
        return;
      }
      
      // Generate HTML code with the requested format
      const htmlCode = `(${teacherName} - ${educationLevel} - ${year} - ${subject})\n\n<a href="${postLink}" class="lesson-item block p-2 hover:bg-white rounded-md">${postTitle}</a>`;
      
      // Display the code
      document.getElementById('htmlCode').textContent = htmlCode;
    }
    
    function copyCode() {
      const htmlCode = document.getElementById('htmlCode').textContent;
      if (!htmlCode || htmlCode.includes('سيظهر كود HTML')) {
        alert('لا يوجد كود لنسخه. الرجاء إنشاء الكود أولاً.');
        return;
      }
      
      navigator.clipboard.writeText(htmlCode).then(() => {
        const copyButton = document.querySelector('button[onclick="copyCode()"]');
        if (copyButton) {
          const originalText = copyButton.innerHTML;
          copyButton.innerHTML = '<i class="fas fa-check mr-2"></i>تم النسخ!';
          setTimeout(() => {
            copyButton.innerHTML = originalText;
          }, 2000);
        }
      }).catch(err => {
        console.error('Failed to copy: ', err);
      });
    }
    
    function resetForm() {
      document.getElementById('teacherName').value = '';
      document.getElementById('educationLevel').value = 'متوسط';
      document.getElementById('subject').value = 'الرياضيات';
      document.getElementById('year').value = 'الأولى';
      document.getElementById('postTitle').value = '';
      document.getElementById('postLink').value = '';
      document.querySelector('input[name="contentType"][value="ملخص"]').checked = true;
      document.getElementById('htmlCode').innerHTML = '<span class="text-gray-400">سيظهر كود HTML هنا بعد تعبئة النموذج</span>';
    }
    
    // Update year options based on education level
    document.getElementById('educationLevel').addEventListener('change', function() {
      const yearSelect = document.getElementById('year');
      const level = this.value;
      
      if (level === 'متوسط') {
        yearSelect.innerHTML = `
          <option value="الأولى">الأولى</option>
          <option value="الثانية">الثانية</option>
          <option value="الثالثة">الثالثة</option>
          <option value="الرابعة">الرابعة</option>
        `;
      } else if (level === 'ثانوي') {
        yearSelect.innerHTML = `
          <option value="الأولى">الأولى</option>
          <option value="الثانية">الثانية</option>
          <option value="الثالثة">الثالثة</option>
        `;
      }
    });
  </script>
</body>
</html>
